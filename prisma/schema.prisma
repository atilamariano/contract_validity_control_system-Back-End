generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Company {
  id                    Int        @id @default(autoincrement())
  code                  String     @unique
  cnpj                  String     @unique
  businessName          String
  contactPerson         String
  contactPhone          String
  contactEmail          String     @unique
  inclusionDate         DateTime   @default(now())
  status                EnumStatus
  municipalRegistration String

  @@map(name: "companies")
}

enum EnumStatus {
  ACTIVE
  INATIVE
}
